<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ListFragment">

    <TextView
        android:id="@+id/date"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/ll"
        app:layout_constraintTop_toBottomOf="@id/date"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/day1_tv"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="월"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:id="@+id/date1_tv"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/day1_iv"
                android:layout_marginTop="3dp"
                android:background="@drawable/icon_circle"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:layout_width="5dp"
                android:layout_height="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/day2_tv"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="화"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:id="@+id/date2_tv"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/day2_iv"
                android:layout_marginTop="3dp"
                android:background="@drawable/icon_circle"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:layout_width="5dp"
                android:layout_height="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:orientation="vertical"
                android:id="@+id/day3_tv"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="수"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:id="@+id/date3_tv"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/day3_iv"
                android:layout_marginTop="3dp"
                android:background="@drawable/icon_circle"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:layout_width="5dp"
                android:layout_height="5dp"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/day4_tv"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="목"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:id="@+id/date4_tv"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/day4_iv"
                android:layout_marginTop="3dp"
                android:background="@drawable/icon_circle"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:layout_width="5dp"
                android:layout_height="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/day5_tv"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="금"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:id="@+id/date5_tv"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/day5_iv"
                android:layout_marginTop="3dp"
                android:background="@drawable/icon_circle"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:layout_width="5dp"
                android:layout_height="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/day6_tv"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="토"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:id="@+id/date6_tv"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/day6_iv"
                android:layout_marginTop="3dp"
                android:background="@drawable/icon_circle"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:layout_width="5dp"
                android:layout_height="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/day7_tv"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="일"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:id="@+id/date7_tv"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/day7_iv"
                android:layout_marginTop="3dp"
                android:background="@drawable/icon_circle"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:layout_width="5dp"
                android:layout_height="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ll"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>