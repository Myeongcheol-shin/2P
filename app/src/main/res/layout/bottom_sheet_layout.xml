<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background">

    <ImageView
        android:src="@drawable/round_removal"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/black"
            android:id="@+id/createText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:text="일정 추가"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:textSize="25dp" />
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <ImageView
            android:layout_marginEnd="12dp"
            android:src="@drawable/close_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:id="@+id/cancelButton"/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_marginEnd="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/placeName_tv"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:maxLength="10"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <com.github.nikartm.button.FitButton
                    android:id="@+id/search_btn"
                    android:gravity="center_vertical"
                    app:fb_backgroundColor="#FF7043"
                    app:fb_cornerRadius="2dp"
                    app:fb_shape="rectangle"
                    app:fb_divHeight="40dp"
                    app:fb_iconWidth="23dp"
                    app:fb_iconHeight="23dp"
                    app:fb_iconPosition="left"
                    app:fb_iconMarginEnd="5dp"
                    app:fb_icon="@drawable/icon_gps"
                    app:fb_iconColor="#FFFFFF"
                    app:fb_text="위치 선택하기"
                    app:fb_textSize="14sp"
                    app:fb_textColor="@color/white"
                    app:fb_textStyle="bold"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/result_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <RelativeLayout
                    android:id="@+id/map_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:text="내용 입력"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.google.android.material.textfield.TextInputLayout
                app:boxStrokeColor="@color/purple"
                android:layout_margin="20dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/content_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="내용"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:text="시간 설정"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_calendar2"
                android:backgroundTint="@color/purple"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <DatePicker
                android:theme="@style/TimePicker"
                android:id="@+id/date_picker"
                android:layout_gravity="center"
                android:datePickerMode="spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:calendarViewShown="false" />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_time"
                android:backgroundTint="@color/purple"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TimePicker
                android:theme="@style/TimePicker"
                android:id="@+id/time_picker"
                android:layout_gravity="center"
                android:timePickerMode="spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:calendarViewShown="false" />
            <androidx.appcompat.widget.AppCompatButton
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="일정 추가"
                android:textStyle="bold"
                android:layout_margin="20dp"
                android:background="@drawable/close_background"
                android:id="@+id/apply_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>